{
  "name": "minebench",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.26.1",
  "scripts": {
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:reset": "docker compose down -v && docker compose up -d",
    "env:ensure": "node scripts/ensure-env.mjs",
    "db:wait": "node scripts/wait-for-db.mjs",
    "dev:setup": "pnpm env:ensure && pnpm atlas && pnpm db:reset && pnpm db:wait && pnpm prisma:migrate && pnpm dev",
    "dev": "next dev",
    "prebuild": "prisma generate",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:dev": "prisma migrate dev",
    "atlas": "node scripts/build-texture-atlas.mjs"
  },
  "dependencies": {
    "@prisma/client": "^6.0.0",
    "next": "^15.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "three": "^0.172.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/three": "^0.182.0",
    "eslint": "^9.0.0",
    "eslint-config-next": "^15.0.0",
    "prisma": "^6.0.0",
    "sharp": "^0.33.5",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.7.0"
  }
}
